<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="?attr/cardBackground"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ФИО пациента -->
        <TextView
            android:id="@+id/patientNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО пациента"
            android:textColor="?attr/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Информация о враче -->
        <TextView
            android:id="@+id/doctorInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Врач: Неизвестно"
            android:textColor="?attr/textSecondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Диагноз -->
        <TextView
            android:id="@+id/diagnosisTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Диагноз: Не указан"
            android:textColor="?attr/textSecondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>